{
  "$schema": "https://opencode.ai/config.json",
  "model": "azure/model-router",
  "provider": {
    "azure": {
      "npm": "@ai-sdk/azure",
      "name": "Azure OpenAI",
      "options": {
        "baseURL": "https://YOUR-RESOURCE.openai.azure.com/openai",
        "apiKey": "YOUR_API_KEY",
        "useDeploymentBasedUrls": true,
        "apiVersion": "2024-12-01-preview"
      },
      "models": {
        "model-router": {
          "name": "model-router",
          "limit": {
            "context": 200000,
            "output": 16384
          }
        }
      }
    }
  }
}
